{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDirs": [
      "./src",
      "./test"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ]
  },
  "compileOnSave": false,
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
